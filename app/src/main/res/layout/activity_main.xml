<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_wave__up" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/editUN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Username"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:textCursorDrawable="@drawable/grey_cursor_color"
            android:textColorHint="@android:color/black"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/editPW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editUN"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:textColorHint="@android:color/black"
            android:textSize="25sp"
            android:textCursorDrawable="@drawable/grey_cursor_color"
            app:drawable_hide="@drawable/hide1"
            app:drawable_show="@drawable/show" />

        <TextView
            android:id="@+id/lblForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPW"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/poppins_semibold"
            android:text="Forgot Password?"
            android:textColor="#d5d5d5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblForgot"
            android:layout_marginTop="10dp"
            android:background="#00cba9"
            android:fontFamily="@font/poppins_semibold"
            android:padding="10dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnCreateAccount"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_dark"
            android:fontFamily="@font/poppins_semibold"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_wave_down" />
</RelativeLayout>